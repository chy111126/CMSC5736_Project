<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="10dp"
    app:paddingStart="12dp"
    android:descendantFocusability="blocksDescendants"
    tools:background="#EFEFEF">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:text="ID: "
            android:textColor="?android:attr/colorPrimaryDark"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textView_beacon_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:text="XXXXXXX"
            android:textColor="?android:attr/colorPrimaryDark"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView_beacon_name"
            android:layout_below="@+id/textView_beacon_name"
            android:layout_weight="1"
            android:text="Major: "
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="62dp" />

        <TextView
            android:id="@+id/textView_beacon_major"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView_beacon_name"
            android:layout_below="@+id/textView_beacon_name"
            android:layout_weight="1"
            android:text="1"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="62dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView_beacon_name"
            android:layout_below="@+id/textView_beacon_name"
            android:layout_weight="1"
            android:text="Minor:"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="62dp" />

        <TextView
            android:id="@+id/textView_beacon_minor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_beacon_major"
            android:layout_alignBottom="@+id/textView_beacon_major"
            android:layout_toEndOf="@+id/textView_beacon_major"
            android:layout_weight="1"
            android:text="111"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="62dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView_beacon_name"
            android:layout_below="@+id/textView_beacon_name"
            android:layout_weight="1"
            android:text="RSSI:"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="62dp" />

        <TextView
            android:id="@+id/textView_beacon_rssi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_beacon_major"
            android:layout_alignBottom="@+id/textView_beacon_major"
            android:layout_alignEnd="@+id/textView_beacon_name"
            android:layout_weight="1"
            android:text="-99"
            tools:layout_editor_absoluteX="277dp"
            tools:layout_editor_absoluteY="62dp" />
    </LinearLayout>


</LinearLayout>