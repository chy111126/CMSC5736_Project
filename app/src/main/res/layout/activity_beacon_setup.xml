<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="80dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="ID:"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="353dp" />

        <TextView
            android:id="@+id/textview_becon_setup_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toEndOf="@+id/textView4"
            android:text="XXX-XX"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="353dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"

            android:text="Major:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_becon_setup_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toEndOf="@+id/textView6"
            android:layout_weight="1"
            android:text="100"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView6"

            android:text="Minor:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_becon_setup_minor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_toEndOf="@+id/textView7"
            android:layout_weight="1"
            android:text="100"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView6"

            android:text="RSSI:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_becon_setup_rssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView11"
            android:layout_alignBottom="@+id/textView11"
            android:layout_toEndOf="@+id/textView11"
            android:layout_weight="1"
            android:text="-100"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView11"
            android:layout_below="@+id/textview_becon_setup_rssi"

            android:text="Recieve power at 0.5m:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_half_meter_power"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView12"
            android:layout_toEndOf="@+id/textView12"
            android:layout_weight="1"
            android:text="00"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_half_meter_calibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textview_half_meter_power"
            android:layout_alignBottom="@+id/textview_half_meter_power"

            android:layout_toEndOf="@+id/textview_half_meter_power"

            android:onClick="onClick"
            android:text="Calibrate" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_one_meter_calibrate"
            android:layout_alignBottom="@+id/btn_one_meter_calibrate"
            android:layout_alignStart="@+id/textView12"
            android:layout_weight="1"
            android:text="Recieve power at 1m:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_one_meter_power"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView17"
            android:layout_alignBottom="@+id/textView17"
            android:layout_toEndOf="@+id/textView17"
            android:layout_weight="1"
            android:text="00"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_one_meter_calibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btn_half_meter_calibrate"
            android:layout_below="@+id/btn_half_meter_calibrate"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="Calibrate" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView17"
            android:layout_below="@+id/btn_one_meter_calibrate"

            android:text="Recieve power at 2m:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_two_meter_power"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView18"
            android:layout_alignBottom="@+id/textView18"
            android:layout_toEndOf="@+id/textView18"
            android:layout_weight="1"
            android:text="00"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_two_meter_calibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textview_two_meter_power"
            android:layout_alignBottom="@+id/textview_two_meter_power"
            android:layout_alignStart="@+id/btn_one_meter_calibrate"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="Calibrate" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView18"
            android:layout_below="@+id/btn_two_meter_calibrate"

            android:text="Recieve power at 4m:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_four_meter_power"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView20"
            android:layout_alignBottom="@+id/textView20"
            android:layout_toEndOf="@+id/textView20"
            android:layout_weight="1"
            android:text="00"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_four_meter_calibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textview_four_meter_power"
            android:layout_alignBottom="@+id/textview_four_meter_power"
            android:layout_alignStart="@+id/btn_two_meter_calibrate"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="Calibrate" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView20"
            android:layout_below="@+id/btn_four_meter_calibrate"

            android:text="X Location:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/textview_location_x"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView22"
            android:layout_alignBottom="@+id/textView22"
            android:layout_alignStart="@+id/textview_location_y"
            android:ems="10"
            android:inputType="number"
            android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textview_location_y"
            android:layout_alignBottom="@+id/textview_location_y"
            android:layout_alignEnd="@+id/textView22"
            android:layout_weight="1"
            android:text="Y Location:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/textview_location_y"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btn_four_meter_calibrate"
            android:layout_below="@+id/textView22"

            android:ems="10"
            android:inputType="numberDecimal"
            android:text="0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_location_y"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:layout_toStartOf="@+id/btn_four_meter_calibrate"
            android:onClick="onClick"
            android:text="Save" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_location_y"
            android:layout_gravity="center"
            android:layout_toStartOf="@+id/btn_four_meter_calibrate"
            android:onClick="onClick"
            android:text="Cancel" />
    </LinearLayout>

</LinearLayout>