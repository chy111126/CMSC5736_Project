<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical"
    app:paddingStart="12dp"
    tools:background="#EFEFEF">

    <RelativeLayout
        android:paddingEnd="12dp"
        android:paddingLeft="4dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="4dp"
            android:src="@drawable/profile"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profile_image"
            android:paddingLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_friend_name"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.87"
                android:textColor="@android:color/black"
                tools:text="Name" />

            <TextView
                android:id="@+id/item_friend_desc"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:alpha="0.54"
                android:ellipsize="end"
                android:textColor="@android:color/black"
                tools:text="Near: Toilet" />
        </LinearLayout>


        <ImageView
            android:id="@+id/item_friend_proximity_indicator"
            android:layout_alignParentEnd="true"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/map_marker" />

        <TextView
            android:id="@+id/item_friend_last_updated"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/item_friend_proximity_indicator"
            android:alpha="0.54"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            tools:text="10 seconds ago" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#22000000"/>


</LinearLayout>
